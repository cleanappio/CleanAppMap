import Foundation
import CleanAppMapKit

class CleanAppMapAPI {

    // MARK: - Properties

    static let shared = CleanAppMapAPI()

    let baseURL = URL(string: "https://cleanappmap.example.com/api/v1")!

    // MARK: - Initialization

    private init() {}

    // MARK: - Public Methods

    func getMapOverlay(completion: @escaping (Result<CleanAppMapOverlay, Error>) -> Void) {
        let url = baseURL.appendingPathComponent("map_overlay")
        let task = URLSession.shared.dataTask(with: url) { data, response, error in
            if let error = error {
                completion(.failure(error))
                return
